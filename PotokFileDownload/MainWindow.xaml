<Window x:Class="PotokFileDownload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PotokFileDownload"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="199*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <RichTextBox Name="richTextBox" Grid.Row="0" Grid.Column="1"/>
        <StackPanel Grid.Row="1">
            <TextBox Name="textBoxUrl" Width="242" HorizontalAlignment="Left" Margin="0 15 0 0" Height="29"/>
            <Button x:Name="downloadButton" Content="Загрузить" Click="FileDownload" Width="172" Height="37" Margin="0 -30 0 0" HorizontalAlignment="Right"/>
        </StackPanel>
        <ProgressBar x:Name="loadProgressBar" HorizontalAlignment="Center" Height="85" Grid.Row="3" VerticalAlignment="Center" Width="800"/>
    </Grid>
</Window>
